<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/drawerHead"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.starlab.dailycollection.ui.customview.CircleImageView
        android:id="@+id/userDrawerAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="center"
        android:background="@drawable/circle_image"
        app:srcCompat="@drawable/move6"/>

    <TextView
        android:id="@+id/userDrawerCodeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/drawer_nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/userDrawerWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
